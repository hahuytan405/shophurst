        <!-- Mobile-menu end -->
        <div class="overlay has-fade ">
            <div class="notification bg-dark-white">
                <div></div>
                <p class="notification-text"></p>
                <button data-text="confirm" class="button-one submit-button notificationButton" >OK</button>
            </div>
        </div>
		<!-- HEADING-BANNER START -->
		<div class="heading-banner-area overlay-bg">
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<div class="heading-banner">
							<div class="heading-banner-title">
								<h2>Shopping Cart</h2>
							</div>
							<div class="breadcumbs pb-15">
								<ul>
									<li><a href="/">Home</a></li>
									<li><a href="/cart">Shopping Cart</a></li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- HEADING-BANNER END -->
		<!-- SHOPPING-CART-AREA START -->
		<div class="shopping-cart-area  pt-80 pb-80">
			<div class="container">	
				<div class="row">
					<div class="col-lg-12">
						<div class="shopping-cart">
							<!-- Nav tabs -->
							<ul class="cart-page-menu nav row clearfix mb-30">
								<li><a class="active" href="/cart" >shopping cart</a></li>
								<li><a href="/wishlist" >wishlist</a></li>
								<li><a href="/checkout" >check out</a></li>
								<li><a href="/order-complete" >order complete</a></li>
							</ul>

							<!-- Tab panes -->
							<div class="tab-content">
								<!-- shopping-cart start -->
								<div class="tab-pane active" id="shopping-cart">
									<form>
										<div class="shop-cart-table">
											<div class="table-content table-responsive">
												<% if (products.length > 0) { %>
												<table>
													<thead>
														<tr>
															<th></th>
															<th class="product-thumbnail">Product</th>
															<th class="product-price">Price</th>
															<th class="product-quantity">Quantity</th>
															<th class="product-subtotal">Total</th>
															<th class="product-remove">Remove</th>
														</tr>
													</thead>
													<tbody>
														<% products.forEach(p => { %>
														<tr class="product">
															<td>
																<input type="checkbox" class="checkboxcart" name="checkboxcart">
															</td>
															<td class="product-thumbnail  text-left">
																<!-- Single-product start -->
																<div class="single-product">
																	<div class="product-img">
																		<a href="/products/<%= p.productId._id %>"><img class="productImage" src="https://lh3.googleusercontent.com/u/0/d/<%= p.productId.imageUrls[0] %>" alt="<%= p.productId.title %>" /></a>
																	</div>
																	<div class="product-info">
																		<h4 class="post-title"><a class="text-light-black" href="#"><%= p.productId.title %></a></h4>
																		<p class="mb-0">Color :  Black</p>
																		<p class="mb-0">Size :     SL</p>
																	</div>
																</div>
																<!-- Single-product end -->												
															</td>
															<td class="product-price">$<%= p.productId.price %></td>
															<td class="product-quantity">
																<div class="cart-plus-minus">
																	<button class="dec qtybutton cartbutton">-</button>
																	<input type="text" pattern="^[0-9]+$" value="<%= p.quantity %>"  name="qtybutton" class="cart-plus-minus-box"  oninput="ReplaceCart(this),UpdateSubtotal(this)">
																	<button class="inc qtybutton cartbutton">+</button>
																</div>
															</td>
															<td class="product-subtotal">$<%= p.productId.price*p.quantity %></td>
															<td class="product-remove">
																<input type="hidden" value="<%= p.productId._id%>" name="productId">
																<input type="hidden" name="_csrf" value="<%= csrfToken %>">	
																<a ><i class="zmdi zmdi-close deleteProductCartBtn" onclick="deleteProductCart(this)"></i></a>
															</td>
														</tr>
														<% }) %>
													</tbody>
												</table>
												<% } else { %>
													<h1>No Products in Cart!</h1>
												<% } %>
											</div>
										</div>
										<div class="cart-sticky col-md-12">
											<div class="cart-tab bg-white mt-30">
												<div class="cart-tab-options">
													<input type="checkbox" id="checkboxcart-all" name="checkboxcart-all">
													<label for="checkboxcart-all" class="checkboxcart-all">Select All</label>
													<button class="cart-tab-options-btn cart-tab-options-btn-delete" disabled>DELETE</button>
													<button class="cart-tab-options-btn cart-tab-options-btn-wishlist" disabled>SAVE TO WISHLIST</button>
												</div>
												<div class="cart-tab-order">
													<h5 class="totalProducts">TOTAL PAYMENT (0 Product): </h5>
													<h5 class="totalPrice">$ 0</h5>
													<button disabled type="submit" data-text="ORDER" class="cart-tab-options-btn button-one submit-button mt-15" id="submit-cart-to-order">ORDER</button>
												</div>
											</div>
										</div>
									</form>		
								</div>
								<!-- shopping-cart end -->
							</div>

						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- SHOPPING-CART-AREA END -->
		<!-- QUICKVIEW PRODUCT -->
		<div id="quickview-wrapper">
		   <!-- Modal -->
		   <div class="modal fade" id="productModal" tabindex="-1" role="dialog">
				<div class="modal-dialog" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-bs-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
						</div>
						<div class="modal-body">
							<div class="modal-product">
								<div class="product-images">
									<div class="main-image images">
										<img alt="#" src="img/product/quickview-photo.jpg"/>
									</div>
								</div><!-- .product-images -->

								<div class="product-info">
									<h1>Aenean eu tristique</h1>
									<div class="price-box-3">
										<hr />
										<div class="s-price-box">
											<span class="new-price">$160.00</span>
											<span class="old-price">$190.00</span>
										</div>
										<hr />
									</div>
									<a href="shop.html" class="see-all">See all features</a>
									<div class="quick-add-to-cart">
										<form method="post" class="cart">
											<div class="numbers-row">
												<input type="number" id="french-hens" value="3" min="1">
											</div>
											<button class="single_add_to_cart_button" type="submit">Add to cart</button>
										</form>
									</div>
									<div class="quick-desc">
										Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam fringilla augue nec est tristique auctor. Donec non est at libero.
									</div>
									<div class="social-sharing">
										<div class="widget widget_socialsharing_widget">
											<h3 class="widget-title-modal">Share this product</h3>
											<ul class="social-icons">
												<li><a target="_blank" title="Google +" href="#" class="gplus social-icon"><i class="zmdi zmdi-google-plus"></i></a></li>
												<li><a target="_blank" title="Twitter" href="#" class="twitter social-icon"><i class="zmdi zmdi-twitter"></i></a></li>
												<li><a target="_blank" title="Facebook" href="#" class="facebook social-icon"><i class="zmdi zmdi-facebook"></i></a></li>
												<li><a target="_blank" title="LinkedIn" href="#" class="linkedin social-icon"><i class="zmdi zmdi-linkedin"></i></a></li>
											</ul>
										</div>
									</div>
								</div><!-- .product-info -->
							</div><!-- .modal-product -->
						</div><!-- .modal-body -->
					</div><!-- .modal-content -->
				</div><!-- .modal-dialog -->
		   </div>
		   <!-- END Modal -->
		</div>
		<!-- END QUICKVIEW PRODUCT -->	
		
    </div>
</body>
<script src="/js/cart.js"></script>
