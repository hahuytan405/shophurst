                                        <li>
                                            <a >
                                                <form action="/logout" method="post">
                                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                    <button style="    
                                                    background: transparent none repeat scroll 0 0;
                                                    color: #666;
                                                    display: block;
                                                    font-size: 14px;
                                                    font-weight: 700;
                                                    line-height: 45px;
                                                    padding: 0;
                                                    position: relative;
                                                    width: 100%;
                                                    text-align: left;
                                                    text-transform: uppercase;
                                                    z-index: 1;" type="submit">Logout</button>
