<%- include('../includes/head.ejs') %>
<body>
    <div class="wrapper bg-dark-white">
        <%- include('../includes/navigation.ejs') %>  	    
			<!-- HEADING-BANNER START -->
			<div class="heading-banner-area overlay-bg">
				<div class="container">
					<div class="row">
						<div class="col-md-12">
							<div class="heading-banner">
								<div class="heading-banner-title">
									<h2>Registration</h2>
								</div>
								<div class="breadcumbs pb-15">
									<ul>
										<li><a href="/">Home</a></li>
										<li><a href="/new-password">New password</a></li>
									</ul>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- HEADING-BANNER END -->
			<!-- SHOPPING-CART-AREA START -->
			<div class="login-area  pt-80 pb-80">
				<div class="container">
					<form action="/new-password" method="POST">	
						<div class="row">
							<div class="col-lg-12 ">
								<div class="customer-login customer-auth">
									<h4 class="title-1 title-border text-uppercase mb-30">RESET PASSWORD</h4>
									<p class="text-gray"> We will send you an email to activate the password reset.</p>
									<% if (errorMessage) { %>
										<div class="user-message user-message--error"><%= errorMessage %></div>
									<% } %>
									<label for="password">Password</label>
									<input 
										class="<%= validationErrors.find(e => e.path === 'password') ? 'invalid' : '' %>"
										type="password" 
										name="password" 
										id="password" 
										value="<%= oldInput.password %>"
										placeholder="Your new password here..." 
									>
									<label for="confirmPassword">Confirm Password</label>
									<input
										placeholder="Confirm Password"
										class="<%= validationErrors.find(e => e.path === 'confirmPassword') ? 'invalid' : '' %>"
										type="password" 
										name="confirmPassword" 
										id="confirmPassword" 
										value="<%= oldInput.confirmPassword %>"
									>
									<input type="hidden" name="userId" value="<%= userId %>">
									<input type="hidden" name="passwordToken" value="<%= passwordToken %>">
									<input type="hidden" name="_csrf" value="<%= csrfToken %>">
									<button type="submit" data-text="Update Password" class="button-one submit-button mt-15">Update Password</button>
								</div>					
							</div>
						</div>
					</form>
				</div>
			</div>
			<!-- SHOPPING-CART-AREA END -->
    </div>
</body>
<%- include('../includes/end.ejs') %>
