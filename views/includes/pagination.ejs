<div class="pagination">
    <ul>
    <% if (hasPreviousPage) { %>
        <li><a href="/shop/?page=<%= previousPage %>"><i class="zmdi zmdi-long-arrow-left"></i></a></li>
    <% } %>
    <% if (currentPage !== 1 && previousPage !== 1) { %>
        <li><a href="/shop/?page=1">1</a></li>
    <% } %>
    <% if ((previousPage - 1)  > 1) { %>
        <li>...</li>
    <% } %>
    <% if (hasPreviousPage) { %>
        <li><a href="/shop/?page=<%= previousPage %>" ><%= previousPage %></a></li>
    <% } %>
    <li><a href="/shop/?page=<%= currentPage %>" class="active"><%= currentPage %></a></li>
    <% if (hasNextPage) { %>
        <li><a href="/shop/?page=<%= nextPage %>" ><%= nextPage %></a></li>
    <% } %>
    <% if ((nextPage + 1) < lastPage) { %>
        <li>...</li>
    <% } %>
    <% if (lastPage !== currentPage && nextPage !== lastPage) { %>
        <li><a href="/shop/?page=<%= lastPage %>" ><%= lastPage %></a></li>
    <% } %>
    <% if (hasNextPage) { %>
        <li><a href="/shop/?page=<%= nextPage %>"><i class="zmdi zmdi-long-arrow-right"></i></a></li>
    <% } %>
    </ul>
</div>